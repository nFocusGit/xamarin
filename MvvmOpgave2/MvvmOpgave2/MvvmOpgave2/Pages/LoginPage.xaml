<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmOpgave2.Pages.LoginPage">

  <StackLayout >
    <Label x:Name="versionsLabel" Text="{Binding Version}" HorizontalOptions="Center" />
    <Label x:Name="statusLabel" Text="{Binding Status}" HorizontalOptions="Center" />
    <!--<Entry x:Name="loginEntry" Placeholder="PIN..." Keyboard="Numeric" />-->
    <Entry x:Name="loginEntry" Text="{Binding Pin, Mode=OneWayToSource}" Placeholder="PIN..." Keyboard="Numeric" />
    <Button x:Name="okButton" Text="OK" />
    <!--<Button x:Name="okButton" Text="OK" IsEnabled="{Binding, LoginButtonEnabled}"/>-->
    <!--<Image Source="waterfall"/>
    <Image x:Name="waterfall"/>-->
  </StackLayout>  
  
</ContentPage>